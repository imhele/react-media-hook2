{
  "compilerOptions": {
    "target": "es5",
    "module": "commonjs",
    "declaration": true,
    "moduleResolution": "node",
    "importHelpers": true,
    "esModuleInterop": true,
    "jsx": "react",
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "lib": ["esnext", "dom"],
    "outDir": "lib/",
    "strictNullChecks": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
